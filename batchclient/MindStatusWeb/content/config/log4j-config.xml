<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
	<appender name="consoleOut" class="org.apache.log4j.ConsoleAppender">
		<param name="ImmediateFlush" value="true"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p - %m\n"/>
		</layout>
	</appender>
	<appender name="mainLogFile" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${webapp.root}log/main.log"/>
		<param name="Append" value="true"/>
		<param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="10"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d (%F:%L) - %m\n"/>
		</layout>
	</appender>
	
	<appender name="spingLogFile" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${webapp.root}log/sping.log"/>
		<param name="Append" value="true"/>
		<param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="10"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d (%F:%L) - %m\n"/>
		</layout>
	</appender>
	
	<appender name="hibernateLogFile" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${webapp.root}log/hibernate.log"/>
		<param name="Append" value="true"/>
		<param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="10"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d (%F:%L) - %m\n"/>
		</layout>
	</appender>
	
	<appender name="strutsLogFile" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${webapp.root}log/struts.log"/>
		<param name="Append" value="true"/>
		<param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="10"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d (%F:%L) - %m\n"/>
		</layout>
	</appender>

	<logger name="org.apache.commons" additivity="false">
		<level value="error"/>
		<appender-ref ref="consoleOut"/>
	</logger>

	<logger name="com.vicutu" additivity="false">
		<level value="info"/>
		<appender-ref ref="consoleOut"/>
		<appender-ref ref="mainLogFile"/>
	</logger>
	
	<logger name="com.mindstatus" additivity="false">
		<level value="info"/>
		<appender-ref ref="consoleOut"/>
		<appender-ref ref="mainLogFile"/>
	</logger>
	
	<logger name="org.springframework" additivity="false">
		<level value="info"/>
		<appender-ref ref="consoleOut"/>
		<appender-ref ref="spingLogFile"/>
	</logger>
	<logger name="org.hibernate" additivity="false">
		<level value="info"/>
		<appender-ref ref="consoleOut"/>
		<appender-ref ref="hibernateLogFile"/>
	</logger>
	<root>
		<level value="info"/>
		<appender-ref ref="consoleOut"/>
	</root>
</log4j:configuration>