<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
	<appender name="consoleOut" class="org.apache.log4j.ConsoleAppender">
		<param name="ImmediateFlush" value="true"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %5p (%t) (%c:%L) - %m%n"/>
		</layout>
	</appender>
	
	<appender name="mainLogFile" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${webapp.root}log/main.log"/>
		<param name="Append" value="true"/>
		<param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="10"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %5p (%t) (%c:%L) - %m%n"/>
		</layout>
	</appender>
	
	<appender name="queueBlockLogFile" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${webapp.root}log/queueblock.log"/>
		<param name="Append" value="true"/>
		<param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="10"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %5p (%t) (%c:%L) - %m%n"/>
		</layout>
	</appender>
	
	<appender name="engineLogFile" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${webapp.root}log/engine.log"/>
		<param name="Append" value="true"/>
		<param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="10"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %5p (%t) (%c:%L) - %m%n"/>
		</layout>
	</appender>
	
	<appender name="downloadLogFile" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${webapp.root}log/download.log"/>
		<param name="Append" value="true"/>
		<param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="10"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %5p (%t) (%c:%L) - %m%n"/>
		</layout>
	</appender>
	
	<appender name="springLogFile" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${webapp.root}log/spring.log"/>
		<param name="Append" value="true"/>
		<param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="10"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %5p (%t) (%c:%L) - %m%n"/>
		</layout>
	</appender>
	
	<appender name="hibernateLogFile" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${webapp.root}log/hibernate.log"/>
		<param name="Append" value="true"/>
		<param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="10"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %5p (%t) (%c:%L) - %m%n"/>
		</layout>
	</appender>
	
	<appender name="displayLogFile" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${webapp.root}log/display.log"/>
		<param name="Append" value="true"/>
		<param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="10"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %5p (%t) (%c:%L) - %m%n"/>
		</layout>
	</appender>
	

	<logger name="org.apache.commons" additivity="false">
		<level value="error"/>
		<appender-ref ref="consoleOut"/>
	</logger>
	
	<logger name="com.vicutu.bw.engine.support.BlockPolicy" additivity="false">
		<level value="info"/>
		<appender-ref ref="consoleOut"/>
		<appender-ref ref="queueBlockLogFile"/>
	</logger>
	
	<logger name="com.vicutu.bw.engine" additivity="false">
		<level value="info"/>
		<appender-ref ref="consoleOut"/>
		<appender-ref ref="engineLogFile"/>
	</logger>
	
	<logger name="com.vicutu.bw.download" additivity="false">
		<level value="info"/>
		<appender-ref ref="consoleOut"/>
		<appender-ref ref="downloadLogFile"/>
	</logger>
	
	<logger name="com.vicutu.bw.support.SpeedLogger" additivity="false">
		<level value="info"/>
		<appender-ref ref="consoleOut"/>
		<appender-ref ref="displayLogFile"/>
	</logger>
	
	<logger name="com.vicutu.bw" additivity="false">
		<level value="info"/>
		<appender-ref ref="consoleOut"/>
		<appender-ref ref="mainLogFile"/>
	</logger>
	
	
	<logger name="org.springframework" additivity="false">
		<level value="info"/>
		<appender-ref ref="consoleOut"/>
		<appender-ref ref="springLogFile"/>
	</logger>
	<logger name="org.hibernate" additivity="false">
		<level value="info"/>
		<appender-ref ref="consoleOut"/>
		<appender-ref ref="hibernateLogFile"/>
	</logger>
	<root>
		<level value="info"/>
		<appender-ref ref="consoleOut"/>
	</root>
</log4j:configuration>