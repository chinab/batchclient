<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<bean id="threadSafeHttpClientFactory" class="com.vicutu.http.factory.impl.ThreadSafeHttpClientFactory" destroy-method="cleanup">
		<property name="maxTotalConnections" value="50"/>
		<property name="maxConnectionsPerRoute" value="5"/>
		<property name="schemes">
			<map>
				<entry key="80" value="http"/>
				<entry key="443" value="https"/>
			</map>
		</property>
	</bean>
	
	<bean id="defaultHttpClient" factory-bean="threadSafeHttpClientFactory" factory-method="createHttpClientInstance" />

	<bean id="jsonRESTfulKVClient" class="com.vicutu.kv.impl.JSONRESTfulKVClient">
		<property name="httpClient">
			<ref bean="defaultHttpClient" />
		</property>
	</bean>
	
	<bean id="byteArrayRESTfulKVClient" class="com.vicutu.kv.impl.ByteArrayRESTfulKVClient">
		<property name="httpClient">
			<ref bean="defaultHttpClient" />
		</property>
	</bean>
	
	<context:component-scan base-package="com.vicutu"/>
</beans>